{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "tailwindcss": "^4.1.18"
  },
  "scripts": {
    "build:posts": "mkdir -p pages/posts && node scripts/build-posts.mjs",
    "tailwind:watch": "npx @tailwindcss/cli -i ./styles/input.css -o ./styles/output.css --watch",
    "tailwind": "npx @tailwindcss/cli -i ./styles/input.css -o ./styles/output.css",
    "format": "npx prettier '**/*.{html,js}' --write"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
